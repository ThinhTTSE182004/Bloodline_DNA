@model Login.ViewModel.ProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - Insurance Portal</title>
    <link rel="stylesheet" href="~/css/profile.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-top">
            <div class="location">
                <i class="ri-map-pin-line"></i>
                <span>Find A Location</span>
            </div>
            <div class="email">
                <i class="ri-mail-line"></i>
                <span>@Model.User.Email</span>
            </div>
            <div class="social-media">
                <i class="ri-facebook-fill"></i>
                <i class="ri-twitter-fill"></i>
                <i class="ri-instagram-line"></i>
                <i class="ri-linkedin-fill"></i>
                <span>English</span>
            </div>
        </div>
        <div class="header-bottom">
            <a href="#" class="logo">logo</a>
            <nav>
                <a href="#">Home</a>
                <a href="#">Service Packages</a>
                <a href="#">Facilities</a>
                <a href="#">Guide</a>
                <a href="#">Blog</a>
                <a href="#">Contact</a>
            </nav>
            <div class="user-info">
                <div class="notification">
                    <i class="ri-notification-3-line"></i>
                    <span class="notification-count">3</span>
                </div>
                <div class="user-details">
                    <div class="user-initials">@Model.User.Name.Substring(0, 2).ToUpper()</div>
                    <div>
                        <span>@Model.User.Name</span>
                        <span>Premium Member</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main class="container">
        <div class="profile-card">
            <div class="profile-info">
                <div class="profile-picture">
                    <i class="ri-user-3-line"></i>
                </div>
                <div class="profile-details">
                    <h1>@Model.User.Name</h1>
                    <p>Policy Holder since @DateTime.Now.ToString("MMMM yyyy")</p>
                    <div class="buttons">
                        <button>Edit Profile</button>
                        <button>Account Settings</button>
                    </div>
                    <div class="personal-info">
                        <h3>Personal Information</h3>
                        <p>Email: @Model.User.Email</p>
                        <p>Phone: @Model.User.Phone</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="order-history">
            <h3>Order History</h3>
            @if (Model.Orders != null && Model.Orders.Count > 0)
            {
                foreach (var order in Model.Orders)
                {
                    <div class="order">
                        <p>Order #@order.OrderId</p>
                        <span>@order.OrderStatus</span>
                    </div>
                }
            }
            else
            {
                <p>No order history found.</p>
            }
        </div>
    </main>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // JavaScript functionality can be added here
        });
    </script>
</body>
</html>
