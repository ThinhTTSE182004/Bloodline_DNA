@model Login.ViewModel.AccountSettingsViewModel

@{
    ViewData["Title"] = "Cài đặt tài khoản";
}

<link href="~/css/account-settings.css" rel="stylesheet">

<div class="account-settings">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-dna me-2"></i>Bloodline DNA
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home me-1"></i>Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Services"><i class="fas fa-flask me-1"></i>Dịch vụ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Guide"><i class="fas fa-book me-1"></i>Hướng dẫn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Blog"><i class="fas fa-newspaper me-1"></i>Blog</a>
                    </li>
                </ul>
                <div class="user-welcome">
                    <i class="fas fa-user-circle"></i>
                    <span>Xin chào, @Model.Name</span>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="account-settings-form wow fadeInUp" data-wow-delay="0.2s">
                    <h2>Cài đặt tài khoản</h2>

                    <form asp-action="AccountSettings" method="post">
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fas fa-user"></i>
                                Thông tin cá nhân
                            </div>
                            
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-user-circle"></i>
                                    Họ tên
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập họ tên của bạn" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>
                                    <i class="fas fa-envelope"></i>
                                    Email
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>
                                    <i class="fas fa-phone"></i>
                                    Số điện thoại
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fas fa-bell"></i>
                                Thông báo
                            </div>
                            
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
                                <label class="form-check-label" for="emailNotifications">
                                    <i class="fas fa-envelope me-2"></i>
                                    Nhận thông báo qua email
                                </label>
                            </div>
                            
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="smsNotifications" checked>
                                <label class="form-check-label" for="smsNotifications">
                                    <i class="fas fa-sms me-2"></i>
                                    Nhận thông báo qua SMS
                                </label>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>

                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success mt-3 wow fadeInUp" data-wow-delay="0.4s">
                                <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/wow/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
}